# Target Application Configuration
BASE_URL=https://apps.private.cytoreason.com/platform/customers/pxx/

# Auth0 Authentication (Primary - set by setup.sh)
# These will be automatically populated by running ./setup.sh
CLIENT_ID=
CLIENT_SECRET=
AUTH0_PXX_DOMAIN=cytoreason-pxx.us.auth0.com
AUTH0_PYY_DOMAIN=cytoreason-pyy.eu.auth0.com
AUTH0_AUDIENCE=https://apps.private.cytoreason.com/

# PXX Customer Credentials
AUTH0_PXX_CLIENT_ID_UNITTEST1ROLE=
AUTH0_PXX_CLIENT_SECRET_UNITTEST1ROLE=
PXX_ROLE=biologist

# PYY Customer Credentials
AUTH0_PYY_CLIENT_ID_UNITTEST1ROLE=
AUTH0_PYY_CLIENT_SECRET_UNITTEST1ROLE=
PYY_ROLE=automation-biologist

# Alternative Authentication Methods (if Auth0 not used)
API_KEY=
USERNAME=
PASSWORD=
AUTH_TOKEN=

# Load Test Configuration
USERS=10
SPAWN_RATE=1
RUN_TIME=60s

# Test Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# Report Configuration
REPORT_DIR=./reports
ENABLE_HTML_REPORT=true

# Advanced Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Google Cloud (set by setup.sh)
GOOGLE_APPLICATION_CREDENTIALS=./keys/credentials.json

# Cytoreason API Configuration
CYTO_CC_BASE_URL=https://cyto-cc.cytoreason.com
CYTO_CC_API_PATH=/api/v1
